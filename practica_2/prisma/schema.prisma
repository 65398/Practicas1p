generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// Definici√≥n de las entidades
model Paciente {
  id             Int      @id @default(autoincrement())
  nombre         String
  identificacion String
  citas          Cita[]
}

model Doctor {
  id             Int      @id @default(autoincrement())
  nombre         String
  identificacion String
  citas          Cita[]
}

model Cita {
  id                  Int      @id @default(autoincrement())
  paciente            Paciente @relation(fields: [idPaciente], references: [id])
  idPaciente          Int
  doctor              Doctor   @relation(fields: [idDoctor], references: [id])
  idDoctor            Int
  fecha               DateTime
  hora                String
  sintomas            String
}
